{
  "name": "repomed-ia",
  "version": "1.0.0",
  "description": "Sistema médico completo para gestão de documentos médicos digitais",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd repomed-api && npm run dev",
    "dev:web": "cd repomed-web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd repomed-api && npm run build",
    "build:web": "cd repomed-web && npm run build",
    "start": "npm run start:api",
    "start:api": "cd repomed-api && npm start",
    "test": "npm run test:api && npm run test:web",
    "test:api": "cd repomed-api && npm test",
    "test:web": "cd repomed-web && npm test",
    "test:unit": "vitest --run",
    "test:unit:frontend": "vitest --run --dir packages/frontend",
    "test:unit:backend": "vitest --run --dir packages/backend",
    "test:contracts": "tsx tests/contracts/openapi-drift.ts",
    "test:e2e": "playwright test",
    "test:load": "k6 run tests/load/smoke.js",
    "test:a11y": "playwright test --grep @a11y",
    "test:visual": "playwright test --grep @visual",
    "test:lighthouse": "tsx tests/lighthouse/lhci.ts",
    "test:golden:pdf": "vitest --run tests/backend/pdf-golden.spec.ts",
    "test:all": "npm run test:unit && npm run test:contracts && npm run test:golden:pdf && npm run test:e2e && npm run test:a11y && npm run test:visual && npm run test:load && npm run test:lighthouse",
    "test:coverage": "npm run test:api -- --coverage && npm run test:web -- --coverage",
    "test:watch": "concurrently \"npm run test:api -- --watch\" \"npm run test:web -- --watch\"",
    "setup:local": "node scripts/setup-local.js",
    "db:migrate": "cd repomed-api && npm run db:migrate",
    "db:seed": "cd repomed-api && npm run db:seed",
    "db:reseed": "cd repomed-api && npm run db:reset && npm run db:migrate && npm run db:seed",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v --remove-orphans",
    "lighthouse": "lhci autorun",
    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "cd repomed-api && npm run lint",
    "lint:web": "cd repomed-web && npm run lint",
    "format": "prettier --write .",
    "monitoring:start": "node scripts/start-monitoring.js",
    "monitoring:stop": "docker compose --profile monitoring down",
    "monitoring:logs": "docker compose --profile monitoring logs -f",
    "monitoring:restart": "npm run monitoring:stop && npm run monitoring:start",
    "postinstall": "npm run setup:local"
  },
  "workspaces": [
    "repomed-api",
    "repomed-web",
    "packages/*"
  ],
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.46.0",
    "@vitest/coverage-v8": "^2.0.0",
    "autocannon": "^7.15.0",
    "axe-core": "^4.9.1",
    "chalk": "^5.6.0",
    "concurrently": "^8.2.2",
    "lighthouse": "^12.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.1.0",
    "tsx": "^4.15.7",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "medicina",
    "documentos-medicos",
    "assinatura-digital",
    "pdf",
    "saude",
    "fastify",
    "react",
    "postgresql",
    "redis"
  ],
  "author": "RepoMed IA Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/repomed-ia/repomed-ia.git"
  },
  "bugs": {
    "url": "https://github.com/repomed-ia/repomed-ia/issues"
  },
  "homepage": "https://github.com/repomed-ia/repomed-ia#readme",
  "dependencies": {
    "axios": "^1.11.0",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.18.0"
  }
}
